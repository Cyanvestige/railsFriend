

<div class="jumbotron">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p class="lead"> 
    <%= @friend.Email %>    |
    <%= @friend.phone %>    |
    <%= @friend.twitter %>  
  </p>
  <br/>
  <p class="lead">
    
    <%= link_to 'Edit', edit_friend_path(@friend),class:"btn btn-secondary" %> 
    <%= link_to 'Back', friends_path,class:"btn btn-dark" %>
    <%= link_to 'Destory',@friend, method: :delete, data:{ confirm: 'Are you sure?' },class:"btn btn-danger" %> 
  </p>
</div>




